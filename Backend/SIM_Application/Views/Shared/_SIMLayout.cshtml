<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/SIM.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>
    <header>
        <nav class="navbar bg-body-tertiary shadow-sm">
            <div class="container-fluid d-flex align-items-center">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo1.png" alt="Logo" width="35" height="35" id="logo" class="d-inline-block align-text-top">
                    <h3 class="mb-0 ml-2">Stock Inventory System</h3>
                </a>
                <ul class="nav justify-content-end">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="UserDetails" asp-action="Index">User Detail</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="BankDetails" asp-action="Index">Bank Detail</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link asp-controller="Home" asp-action="Logout">Log Out</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="d-flex justify-content-start">
        <div class="container-fluid mx-0">
            <div class="row flex-nowrap">
                <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-secondary-subtle z-0 d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white side-shadow side-nav">
                        <ul class="mt-3 nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                            <li class="nav-item m-2">
                                <a class="text-decoration-none text-dark" asp-controller="Home" asp-action="Index">
                                    <i class="fs-5 bi bi-house-door-fill"></i> <span class="fs-5 ms-1 d-none d-sm-inline">Home</span>
                                </a>
                            </li>
                            <li class="nav-item m-2">
                                <a class="text-decoration-none text-dark" asp-controller="UserDetails" asp-action="Index">
                                <i class="fs-5 bi bi-people"></i> <span class="fs-5 ms-1 d-none d-sm-inline">User Details</span>
                                </a>
                            </li>
                            <li class="nav-item m-2">
                                <a class="text-decoration-none text-dark" asp-controller="BankDetails" asp-action="Index">
                                <i class="fs-5 bi bi-bank"></i> <span class="fs-5 ms-1 d-none d-sm-inline">Bank Details</span>
                                </a>
                            </li>
                            <li class="nav-item m-2">
                                <a class="text-decoration-none text-dark" href="#">
                                <i class="fs-5 bi bi-reception-4"></i> <span class="fs-5 ms-1 d-none d-sm-inline">User Stocks</span>
                                </a>
                            </li>
                        <li class="nav-item m-2">
                            <a class="text-decoration-none text-dark" href="#">
                                <i class="fs-5 bi bi-receipt-cutoff"></i> <span class="fs-5 ms-1 d-none d-sm-inline">Order Details</span>
                            </a>
                        </li>
                        </ul>
                </div>
                <div class="col-auto col-md-9 col-xl-9 ms-3 p-3">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <div class="container vw-100 ">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 border-top footer">
        <p class="col-md-4 mb-0 text-body-secondary">© 2024 Company, Inc</p>



            Copyright &copy; 2024 &mdash; Stock Inventory System
    </footer>
</div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
