@model SIM_Application.Models.StocksInfo
@{
    ViewData["Title"] = "UserStocks";
    Layout = "_SIMLayout";
}

<h1>UserStocks</h1>

<div class="card">
    <h5 class="card-header">Add Bank Details</h5>
    <div class="card-body">
        <form asp-action="AddUserStockDetails">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserStockDetail.UserId" />
            <div class="row g-5">
                <div class="col-md">
                    <div class="form-floating">
                        <select asp-for="StockProvider.ProviderId" class="form-control" asp-items="ViewBag.ProviderName"></select>
                        <label asp-for="StockProvider.ProviderId">Provider Name</label>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-floating">
                        <select asp-for="BrokerDetail.BrokerId" class="form-control" asp-items="ViewBag.BrokerName"></select>
                        <label asp-for="BrokerDetail.BrokerId">Broker Name</label>
                    </div>
                </div>
            </div><br>
            <div class="row g-5">
                <div class="col-md">
                    <div class="form-floating">
                        <input asp-for="OrderDetail.PurchasedQuantity" class="form-control" min="1">
                        <label asp-for="OrderDetail.PurchasedQuantity">Purchased Quantity</label>
                        <span asp-validation-for="OrderDetail.PurchasedQuantity" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-floating">
                        <select asp-for="OrderDetail.InvestmentTypeId" class="form-control" asp-items="ViewBag.InvestmentType"></select>
                        <label asp-for="OrderDetail.InvestmentType">Investment Type</label>
                    </div>
                </div>
            </div><br>
            <div class="text-center">
                <div class="form-group justify-content-between">
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

